{
    "manifest_version": 3,
    "name": "Tyrowo's Procrastination Buster",
    "short_name": "P Buster",
    "version": "1.1",
    "version_name": "release 1.1",
    "action": {
        "default_popup": "optionsPage.html",
        "default_icon": {
            "16": "tyFav16.png",
            "48": "tyFav48.png",
            "128": "tyFav128.png"
        },
        "default_title": "User Options and Extension Info"
    },
    "description": "Catch yourself wasting time, so you can knock it off.",
    "icons": {
        "16": "tyFav16.png",
        "48": "tyFav48.png",
        "128": "tyFav128.png"
    },
    "author": "Tyler Crews",
    "background": {
        "service_worker": "serviceWorker.js"
    },
    "incognito": "spanning",
    "options_page": "optionsPage.html",
    "permissions": [
        "tabs",
        "declarativeNetRequest",
        "storage",
        "alarms",
        "webNavigation",
        "notifications",
        "idle"
    ]
}
