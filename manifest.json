{
    "manifest_version": 3,
    "name": "Tyro's Procrastination Buster",
    "short_name": "P Buster",
    "version": "0.5",
    "version_name": "pre-alpha build",
    "action": {
        "default_popup": "userPrefs.html",
        "default_icon": "tyFavicon.png",
        "default_title": "check blocked site"
    },
    "description": "Catch yourself wasting time, so you can knock it off.",
    "icons": {
        "16": "tyFavicon.png"
    },
    "author": "Tyler Crews",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "antiRedditTest",
                "enabled": true,
                "path": "antiRedditTest.json"
            }
        ]
    },
    "incognito": "spanning",
    "permissions": [
        "tabs",
        "declarativeNetRequest",
        "storage"
    ]
}
