{
    "manifest_version": 3,
    "name": "Tyro's Procrastination Buster",
    "short_name": "P Buster",
    "version": "0.54",
    "version_name": "pre-alpha build",
    "action": {
        "default_popup": "userPrefs.html",
        "default_icon": {
            "16": "tyFav16.png",
            "48": "tyFav48.png",
            "128": "tyFav128.png"
        },
        "default_title": "check blocked site"
    },
    "description": "Catch yourself wasting time, so you can knock it off.",
    "icons": {
        "16": "tyFav16.png",
        "48": "tyFav48.png",
        "128": "tyFav128.png"
    },
    "author": "Tyler Crews",
    "background": {
        "service_worker": "serviceWorker.js"
    },
    "incognito": "spanning",
    "permissions": [
        "tabs",
        "declarativeNetRequest",
        "storage",
        "alarms",
        "webNavigation",
        "notifications"
    ]
}
